<body class="text-white">

    <div id="main-content" class="container mx-auto p-4 sm:p-8 flex flex-col items-center justify-center min-h-screen">
        <header class="text-center mb-8">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-500">גלגל המזלות</h1>
            <p class="text-lg text-gray-300">בחר את המזל שלך לקבלת תחזית יומית</p>
            <p id="currentDate" class="text-md text-purple-300 mt-2"></p>
        </header>

        <div id="wheel-container">
            <div id="central-display">בחר מזל</div>
        </div>
    </div>

    <div id="horoscope-modal">
        <div id="horoscope-content" class="text-center max-w-2xl w-full p-8 rounded-lg bg-black bg-opacity-20 relative my-auto">
            <button id="close-modal" class="absolute top-4 right-4 text-3xl text-gray-400 hover:text-white z-10">&times;</button>
            <div id="modal-symbol" class="text-7xl mb-4"></div>
            <h2 id="modal-title" class="text-4xl font-bold mb-4"></h2>

            <h3 class="text-xl font-semibold text-purple-300 mb-2">התחזית היומית שלך:</h3>
            <div id="modal-text" class="text-lg text-gray-200 leading-relaxed min-h-[80px]">
            </div>

            <hr class="my-6 border-gray-600">

            <h3 class="text-xl font-semibold text-purple-300 mb-2">על המזל:</h3>
            <div id="modal-details" class="text-base text-gray-300">
            </div>
        </div>
    </div>

    <script type="module">
        // 1. ייבוא של רשימת המזלות מהקובץ החיצוני
        import { zodiacSigns } from './lib/zodiac.js';

        // 2. כל שאר הקוד שלך נשאר כמעט זהה
        const wheelContainer = document.getElementById('wheel-container');
        const centralDisplay = document.getElementById('central-display');
        const dateElement = document.getElementById('currentDate');
        const modal = document.getElementById('horoscope-modal');
        const closeModalBtn = document.getElementById('close-modal');

        function displayHebrewDate() {
            const today = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            dateElement.textContent = today.toLocaleDateString('he-IL', options);
        }

        function createWheel() {
            const radius = wheelContainer.offsetWidth / 2 - 35;
            const angleStep = (2 * Math.PI) / zodiacSigns.length;

            zodiacSigns.forEach((sign, index) => {
                const angle = angleStep * index - (Math.PI / 2); // Start from top
                const x = radius * Math.cos(angle);
                const y = radius * Math.sin(angle);

                const item = document.createElement('div');
                item.className = 'wheel-item';
                item.innerHTML = sign.symbol;
                item.style.transform = `translate(${x}px, ${y}px)`;

                item.addEventListener('mouseover', () => { centralDisplay.textContent = sign.name; });
                item.addEventListener('mouseout', () => { centralDisplay.textContent = 'בחר מזל'; });
                item.addEventListener('click', () => { displayHoroscope(sign); });

                wheelContainer.appendChild(item);
            });
        }

        async function displayHoroscope(sign) {
            modal.classList.add('visible');
            document.getElementById('modal-symbol').textContent = sign.symbol;
            document.getElementById('modal-title').textContent = sign.name;

            const detailsElement = document.getElementById('modal-details');
            detailsElement.innerHTML = `
                <p><strong>יסוד:</strong> ${sign.element} | <strong>כוכב שליט:</strong> ${sign.planet}</p>
                <p class="mt-2">${sign.description}</p>
            `;

            const textElement = document.getElementById('modal-text');
            textElement.innerHTML = '<div class="flex justify-center"><div class="loader"></div></div>';

            const horoscopeText = await getHoroscopeText(sign);
            textElement.innerHTML = `<p>${horoscopeText}</p>`;
        }

        async function getHoroscopeText(sign) {
            try {
                const response = await fetch(`/api/get-horoscope?sign=${sign.english.toLowerCase()}`);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                return data.horoscope;
            } catch (error) {
                console.error('Failed to fetch horoscope:', error);
                return "אופס, הכוכבים לא מסתדרים כרגע. נסה שוב מאוחר יותר.";
            }
        }

        closeModalBtn.addEventListener('click', () => {
            modal.classList.remove('visible');
        });

        // 3. הפעלת הפונקציות כאשר הדף נטען
        document.addEventListener('DOMContentLoaded', () => {
            displayHebrewDate();
            createWheel();
        });
    </script>
</body>

